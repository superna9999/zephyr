#
# I2C options
#
menuconfig I2C_SLAVE
	bool
	prompt "I2C Slave Drivers"
	depends on I2C
	default n
	help
	  Enable I2C Slave Driver Configuration

if I2C_SLAVE

config I2C_SLAVE_INIT_PRIORITY
	int
	default 60
	prompt "Init priority"
	help
	  I2C Slave device driver initialization priority.

config SYS_LOG_I2C_SLAVE_LEVEL
	int
	prompt "I2C Slave log level"
	depends on SYS_LOG
	default 0
	help
	  Sets log level for I2C drivers.
	  Levels are:
	  - 0 OFF, do not write
	  - 1 ERROR, only write SYS_LOG_ERR
	  - 2 WARNING, write SYS_LOG_WRN in addition to previous level
	  - 3 INFO, write SYS_LOG_INF in addition to previous levels
	  - 4 DEBUG, write SYS_LOG_DBG in addition to previous levels

config I2C_SLAVE_EEPROM
	bool "I2C Slave EEPROM driver"
	default n
	help
	  Enable virtual I2C Slave EEPROM driver

config I2C_SLAVE_EEPROM_SIZE
	int "I2C Slave EEPROM Size in KiB"
	default 1

config I2C_SLAVE_EEPROM_NAME
	string "I2C Slave EEPROM device name"
	default "EEPROM_SLAVE"

config I2C_SLAVE_EEPROM_CONTROLLER_DEV_NAME
	string "I2C Slave EEPROM Controller device name"
	default "I2C_0"

config I2C_SLAVE_EEPROM_ADDRESS
	hex "I2C Slave EEPROM address"
	default 0x56

endif # I2C_SLAVE
